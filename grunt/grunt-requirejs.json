{
    "dev": {
        "options": {
            "appDir": "src/scripts",
            "fileExclusionRegExp": "^(build)",
            "baseUrl": "./",
            "dir": "src/require",
            "optimize": "none",
            "preserveLicenseComments": false,
            "generateSourceMaps": true,
            "skipDirOptimize": true,
            "removeCombined": true,

            "mainConfigFile": [
                "src/scripts/common.js",
                "src/scripts/ng-admin.js"
            ]
        }
    },
    "prod": {
        "options": {
            "appDir": "src/scripts",
            "baseUrl": "./",
            "dir": "src/build",
            "optimize": "none",
            "preserveLicenseComments": false,
            "findNestedDependencies": true,
            "generateSourceMaps": false,
            "skipDirOptimize": true,
            "removeCombined": true,
            "include": "app",

            "mainConfigFile": [
                "src/scripts/common.js",
                "src/scripts/ng-admin.js",
                "src/scripts/app.js"
            ]
        }
    }
}
